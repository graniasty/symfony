{% extends "::base.html.twig" %}

{% block title %}Koszyk{% endblock %}

{% block body %}
    <h1>{{ block('title') }}</h1>
    <table class="table">
        <thead>
        <tr>
            <th>Id produktu</th>
            <th>Nazwa </th>
            <th>Cena</th>
            <th>Ilość</th>
            <th></th>
        </tr>
        </thead>
        <tbody>
        {% for product in products %}
            <tr><td>{{ product.id }}</td>
                <td>{{ product.name }}</td>
                <td>{{ product.price }}</td>
                <td>{{ product.quantity }}</td>
                <td><a href="{{ path('app_product_remogefromcart', {'id': product.id}) }}" class="btn btn-warning btn-small">Usuń z koszyka</a></td>
            </tr>
        {% else %}
            <tr>
                <td colspan="4">Nie znaleziono produktów</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>
{% endblock %}
